generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  SOCIETY_EB
  SOCIETY_PRESIDENT
  FACULTY_ADMIN
  GUARD
}

enum RequestStatus {
  PENDING_PRESIDENT
  PENDING_DOSA
  APPROVED
  REJECTED
}

enum MembershipStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  rollNo    String?  @unique
  year      String?
  branch    String?
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
  permissionRequests PermissionRequest[]
  createdRoomBookings RoomBooking[]
  createdVenueBookings VenueBooking[]
}

model Society {
  id          String   @id @default(uuid())
  name        String   @unique
  type        String?  // e.g., "Tech", "Cultural", "Fest"
  description String?
  
  members     Membership[]
  permissionRequests PermissionRequest[]
  roomBookings RoomBooking[]
  venueBookings VenueBooking[]
}

model Membership {
  id        String           @id @default(uuid())
  userId    String
  societyId String
  status    MembershipStatus @default(PENDING)
  proofUrl  String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  society Society @relation(fields: [societyId], references: [id])

  @@unique([userId, societyId])
}

model PermissionRequest {
  id          String        @id @default(uuid())
  studentId   String
  societyId   String
  reason      String
  date        DateTime
  exitTime    String
  returnTime  String?
  status      RequestStatus @default(PENDING_PRESIDENT)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  student User    @relation(fields: [studentId], references: [id])
  society Society @relation(fields: [societyId], references: [id])
}

model RoomBooking {
  id          String        @id @default(uuid())
  societyId   String
  createdBy   String
  roomName    String
  building    String
  date        DateTime
  timeSlot    String
  purpose     String
  status      RequestStatus @default(PENDING_PRESIDENT)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  society Society @relation(fields: [societyId], references: [id])
  creator User    @relation(fields: [createdBy], references: [id])
}

model VenueBooking {
  id                String        @id @default(uuid())
  societyId         String
  createdBy         String
  venueName         String
  eventName         String
  date              DateTime
  startTime         String
  endTime           String
  expectedAttendees Int
  status            RequestStatus @default(PENDING_DOSA) // Venues might go straight to DoSA or via President
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  society Society @relation(fields: [societyId], references: [id])
  creator User    @relation(fields: [createdBy], references: [id])
}
