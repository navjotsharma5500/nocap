generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  SOCIETY_EB
  SOCIETY_PRESIDENT
  FACULTY_ADMIN
  GUARD
}

enum RequestStatus {
  PENDING_EB
  PENDING_PRESIDENT
  PENDING_FACULTY
  APPROVED
  REJECTED
}

enum MembershipStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SocietyDomain {
  FEST
  SOCIETY
}

enum FlagType {
  HARD
  SOFT
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  rollNo    String?  @unique
  year      String?
  branch    String?
  password  String
  role      Role     @default(STUDENT)
  societyId String?  // For EB/President - links them to their society
  
  // Flagging fields
  isFlagged     Boolean   @default(false)
  flagType      FlagType?
  flagReason    String?
  flaggedBy     String?
  flaggedAt     DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  society   Society? @relation("SocietyStaff", fields: [societyId], references: [id])
  memberships Membership[]
  permissionRequests PermissionRequest[]
  createdRoomBookings RoomBooking[]
  createdVenueBookings VenueBooking[]
  notifications Notification[]
  academicPermissions AcademicPermission[]
}

model Society {
  id          String        @id @default(uuid())
  name        String        @unique
  type        String?       // e.g., "Tech", "Cultural"
  domain      SocietyDomain @default(SOCIETY)
  joinCode    String?       @unique // code for students to join
  description String?
  
  staff       User[]        @relation("SocietyStaff") // EB/President users
  members     Membership[]
  permissionRequests PermissionRequest[]
  roomBookings RoomBooking[]
  venueBookings VenueBooking[]
  bulkRequests BulkRequest[]
}

model Membership {
  id        String           @id @default(uuid())
  userId    String
  societyId String
  status    MembershipStatus @default(PENDING)
  proofUrl  String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  society Society @relation(fields: [societyId], references: [id])

  @@unique([userId, societyId])
}

model PermissionRequest {
  id            String        @id @default(uuid())
  studentId     String
  societyId     String
  reason        String
  date          DateTime
  startDate     DateTime?     // For date range support
  endDate       DateTime?     // For date range support
  exitTime      String
  returnTime    String?
  status        RequestStatus @default(PENDING_PRESIDENT)
  qrToken       String?       @unique
  qrGeneratedAt DateTime?
  expiresAt     DateTime?
  verifiedAt    DateTime?     // exit scan time
  verifiedBy    String?       // guard who verified exit
  checkInAt     DateTime?     // return scan time
  checkInBy     String?       // guard who verified return
  isLate        Boolean       @default(false)  // Was student late returning?
  lateMinutes   Int?          // How many minutes late
  bulkRequestId String?       // if created via bulk request
  
  // Self-activation fields
  isActivated       Boolean   @default(false)
  activatedAt       DateTime?
  activationStatus  String?   // PENDING_EB_ACTIVATION, ACTIVATED, REJECTED
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  student User    @relation(fields: [studentId], references: [id])
  society Society @relation(fields: [societyId], references: [id])
  bulkRequest BulkRequest? @relation(fields: [bulkRequestId], references: [id])
}

model BulkRequest {
  id            String        @id @default(uuid())
  societyId     String
  createdBy     String        // EB user ID
  reason        String
  date          DateTime
  startDate     DateTime?     // For date range
  endDate       DateTime?     // For date range
  exitTime      String
  returnTime    String?
  documentUrl   String?       // attachment URL
  status        RequestStatus @default(PENDING_PRESIDENT)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  society Society @relation(fields: [societyId], references: [id])
  permissionRequests PermissionRequest[]
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   // recipient
  type      String   // MEMBER_FLAGGED, RE_EVAL_REQUESTED, BULK_APPROVED, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  metadata  Json?    // additional data like studentId, societyId, etc.
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model AcademicPermission {
  id          String        @id @default(uuid())
  studentId   String?       // Optional now, for manual entry
  studentName String        // New field
  rollNo      String        // New field
  faculty     String        // New field
  reason      String
  date        DateTime
  department  String?
  exitTime    String
  returnTime  String?
  status      RequestStatus @default(PENDING_FACULTY)
  qrToken     String?       @unique
  qrGeneratedAt DateTime?
  expiresAt   DateTime?
  verifiedAt  DateTime?
  verifiedBy  String?
  checkInAt   DateTime?
  checkInBy   String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  student User? @relation(fields: [studentId], references: [id]) // Optional relation
}

model RoomBooking {
  id          String        @id @default(uuid())
  societyId   String
  createdBy   String
  roomName    String
  building    String
  date        DateTime
  timeSlot    String
  purpose     String
  status      RequestStatus @default(PENDING_PRESIDENT)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  society Society @relation(fields: [societyId], references: [id])
  creator User    @relation(fields: [createdBy], references: [id])
}

model VenueBooking {
  id                String        @id @default(uuid())
  societyId         String
  createdBy         String
  venueName         String
  eventName         String
  date              DateTime
  startTime         String
  endTime           String
  expectedAttendees Int
  status            RequestStatus @default(PENDING_FACULTY)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  society Society @relation(fields: [societyId], references: [id])
  creator User    @relation(fields: [createdBy], references: [id])
}

